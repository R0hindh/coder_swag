<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.ProductActivity">
    <TextView
            android:layout_width="88dp"
            android:layout_height="25dp"
            android:text="@string/products"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:id="@+id/title2" android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title2" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
            android:id="@+id/productListView"/>

</androidx.constraintlayout.widget.ConstraintLayout>